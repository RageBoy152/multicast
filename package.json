{
  "name": "multicast",
  "productName": "MultiCast",
  "author": "Rage",
  "description": "MultiCast",
  "private": true,
  "version": "2.0.5",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "vite-dev": "vite",
    "vite-build": "vite build",
    "lint": "eslint .",
    "vite-preview": "vite preview",
    "electron-serve": "concurrently -k \"cross-env BROWSER=none yarn vite-dev\" \"yarn electron-start\"",
    "electron-build": "node build-script-rage.js",
    "electron-start": "wait-on tcp:5173 && electron .",
    "electron-preview": "electron ."
  },
  "repository": "https://github.com/RageBoy152/multicast",
  "pulbish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.Rage.MultiCast",
    "win": {
      "target": "nsis",
      "icon": "multiCastIcon-256.png"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "package.json",
      "favicon.png",
      "!**/*.env",
      "!build-script-rage.js"
    ],
    "nsis": {
      "license": "license",
      "oneClick": "false",
      "allowToChangeInstallationDirectory": "true"
    },
    "directories": {
      "output": "releases",
      "buildResources": "dist"
    }
  },
  "dependencies": {
    "astrolytics-desktop": "^1.1.1",
    "bootstrap-icons": "^1.11.3",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "nodemailer": "^6.9.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^2.16.0",
    "react-router-dom": "^6.26.2",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.0-alpha.9",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "vite": "^5.4.1"
  }
}
